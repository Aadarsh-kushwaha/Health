<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> -->

    <title>Sign Up - Rural Health Platform</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #2c3e50 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .signup-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            max-width: 1100px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            overflow: hidden;
            min-height: 600px;
        }
        
        .left-panel {
            background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
            position: relative;
        }
        
        .left-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1.5" fill="white" opacity="0.15"/><circle cx="40" cy="70" r="2.5" fill="white" opacity="0.1"/><circle cx="70" cy="20" r="1" fill="white" opacity="0.2"/><circle cx="30" cy="80" r="1.8" fill="white" opacity="0.12"/></svg>');
        }
        
        .logo-section {
            z-index: 1;
        }
        
        .logo {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5em;
            margin-bottom: 20px;
            backdrop-filter: blur(10px);
        }
        
        .welcome-text h2 {
            font-size: 2.2em;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.2;
        }
        
        .welcome-text p {
            font-size: 1.1em;
            opacity: 0.9;
            line-height: 1.6;
            margin-bottom: 30px;
        }
        
        .features-list {
            list-style: none;
            text-align: left;
        }
        
        .features-list li {
            padding: 8px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .check-icon {
            width: 20px;
            height: 20px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }
        
        .right-panel {
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .signup-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .signup-header h1 {
            color: #2c3e50;
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .signup-header p {
            color: #74b9ff;
            font-size: 1.1em;
            font-weight: 500;
        }
        
        .form-group {
            margin-bottom: 25px;
            position: relative;
        }
        
        .form-label {
            display: block;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 0.95em;
        }
        
        .form-input {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid #e8f4f8;
            border-radius: 12px;
            font-size: 1em;
            transition: all 0.3s ease;
            background: #f8fbff;
            color: #2c3e50;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #74b9ff;
            background: white;
            box-shadow: 0 0 0 4px rgba(116, 185, 255, 0.1);
        }
        
        .role-selection {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-top: 10px;
        }
        
        .role-option {
            position: relative;
        }
        
        .role-option input[type="radio"] {
            opacity: 0;
            position: absolute;
        }
        
        .role-card {
            padding: 20px 15px;
            border: 2px solid #e8f4f8;
            border-radius: 12px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f8fbff;
        }
        
        .role-card:hover {
            border-color: #74b9ff;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(116, 185, 255, 0.15);
        }
        
        .role-option input[type="radio"]:checked + .role-card {
            border-color: #00b894;
            background: linear-gradient(135deg, #00b894, #00cec9);
            color: white;
        }
        
        .role-icon {
            font-size: 2em;
            margin-bottom: 8px;
            display: block;
        }
        
        .role-title {
            font-weight: 600;
            font-size: 0.95em;
        }
        
        .signup-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #00b894, #00cec9);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 15px;
            box-shadow: 0 8px 25px rgba(0, 184, 148, 0.3);
        }
        
        .signup-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(0, 184, 148, 0.4);
        }
        
        .login-link {
            text-align: center;
            margin-top: 25px;
            color: #636e72;
        }
        
        .login-link a {
            color: #74b9ff;
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-link a:hover {
            text-decoration: underline;
        }
        
        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #b2bec3;
            pointer-events: none;
        }
        
        @media (max-width: 968px) {
            .signup-container {
                grid-template-columns: 1fr;
                max-width: 500px;
            }
            
            .left-panel {
                order: 2;
                padding: 40px 30px;
            }
            
            .right-panel {
                order: 1;
                padding: 40px 30px;
            }
            
            .role-selection {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 576px) {
            .signup-container {
                margin: 10px;
                border-radius: 15px;
            }
            
            .right-panel {
                padding: 30px 25px;
            }
            
            .signup-header h1 {
                font-size: 2em;
            }
        }
        
        .form-validation {
            color: #e17055;
            font-size: 0.85em;
            margin-top: 5px;
            display: none;
        }
        
        .form-input.error {
            border-color: #e17055;
            background: #ffeaa7;
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="left-panel">
            <div class="logo-section">
                <div class="logo">üè•</div>
                <div class="welcome-text">
                    <h2>Welcome to Rural Health Platform</h2>
                    <p>Connecting villages with quality healthcare services</p>
                </div>
                <ul class="features-list">
                    <li>
                        <span class="check-icon">‚úì</span>
                        <span>24/7 Online Consultations</span>
                    </li>
                    <li>
                        <span class="check-icon">‚úì</span>
                        <span>Digital Prescriptions</span>
                    </li>
                    <li>
                        <span class="check-icon">‚úì</span>
                        <span>Easy Appointment Booking</span>
                    </li>
                    <li>
                        <span class="check-icon">‚úì</span>
                        <span>Secure Health Records</span>
                    </li>
                </ul>
            </div>
        </div>
        
        <div class="right-panel">
            <div class="signup-header">
                <h1>Sign Up</h1>
                <p>Create your account to get started</p>
            </div>
            
            <form id="signupForm" onsubmit="handleSignup(event)">
                <div class="form-group">
                    <label class="form-label" for="username">Username</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username"
                        class="form-input" 
                        placeholder="Enter your username"
                        required
                    >
                    <span class="input-icon">üë§</span>
                    <div class="form-validation" id="usernameError"></div>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="email">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email"
                        class="form-input" 
                        placeholder="Enter your email"
                        required
                    >
                    <span class="input-icon">üìß</span>
                    <div class="form-validation" id="emailError"></div>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password"
                        class="form-input" 
                        placeholder="Create a strong password"
                        required
                    >
                    <span class="input-icon">üîí</span>
                    <div class="form-validation" id="passwordError"></div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Select Your Role</label>
                    <br>
                    <div class="role-selection">
                        <div class="role-option">
                            <input type="radio" id="patient" name="role" value="patient" required>
                            <label for="patient" class="role-card">
                                <span class="role-icon">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</span>
                                <div class="role-title">Patient</div>
                            </label>
                        </div>
                        
                        <div class="role-option">
                            <input type="radio" id="doctor" name="role" value="doctor">
                            <label for="doctor" class="role-card">
                                <span class="role-icon">üë®‚Äç‚öïÔ∏è</span>
                                <div class="role-title">Doctor</div>
                            </label>
                        </div>
                        
                        <div class="role-option">
                            <input type="radio" id="pharmacist" name="role" value="pharmacist">
                            <label for="pharmacist" class="role-card">
                                <span class="role-icon">üíä</span>
                                <div class="role-title">Pharmacist</div>
                            </label>
                        </div>
                    </div>
                    <div class="form-validation" id="roleError"></div>
                </div>
                
                <button type="submit" class="signup-btn">
                    Create Account
                </button>
            </form>
            
            <div class="login-link">
                Already have an account? <a href="/login">Log in</a>
            </div>
        </div>
    </div>

    <script>
        function handleSignup(event) {
            event.preventDefault();
            
            // Clear previous errors
            clearErrors();
            
            const formData = new FormData(event.target);
            const userData = {
                username: formData.get('username'),
                email: formData.get('email'),
                password: formData.get('password'),
                role: formData.get('role')
            };
            
            // Validation
            let isValid = true;
            
            if (!userData.username || userData.username.length < 3) {
                showError('usernameError', 'Username must be at least 3 characters long');
                isValid = false;
            }
            
            if (!userData.email || !isValidEmail(userData.email)) {
                showError('emailError', 'Please enter a valid email address');
                isValid = false;
            }
            
            if (!userData.password || userData.password.length < 6) {
                showError('passwordError', 'Password must be at least 6 characters long');
                isValid = false;
            }
            
            if (!userData.role) {
                showError('roleError', 'Please select your role');
                isValid = false;
            }
            
            if (isValid) {
                // Here you would typically send data to your backend
                alert(`Welcome ${userData.username}! Account created successfully as ${userData.role}.`);
                console.log('User Data:', userData);
                
                // Reset form
                event.target.reset();
            }
        }
        
        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            const inputElement = errorElement.previousElementSibling.previousElementSibling;
            
            errorElement.textContent = message;
            errorElement.style.display = 'block';
            inputElement.classList.add('error');
        }
        
        function clearErrors() {
            const errorElements = document.querySelectorAll('.form-validation');
            const inputElements = document.querySelectorAll('.form-input');
            
            errorElements.forEach(el => {
                el.style.display = 'none';
                el.textContent = '';
            });
            
            inputElements.forEach(el => {
                el.classList.remove('error');
            });
        }
        
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        // Clear error on input focus
        document.querySelectorAll('.form-input').forEach(input => {
            input.addEventListener('focus', function() {
                this.classList.remove('error');
                const errorElement = this.parentNode.querySelector('.form-validation');
                if (errorElement) {
                    errorElement.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>